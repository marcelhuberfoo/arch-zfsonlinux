_my_kmod=spl
_my_pkgname=spl-kmod-dkms-git

# version (without -$pkgrel): ${1%%-*}

# arg 1:  the new package version
post_install() {
  local newver=${1%%-*}
  dkms add --force -m $_my_kmod -v $newver
  cat << EOF
=> To build and install your modules you have the following options
   of which I recommend using the kernel dkms hook.

+) automatically while building a new kernel; add 'dkms' hook to
   the HOOKS variable in /etc/mkinitcpio.conf and rebuild your kernels

=) manually; dkms install -m $_my_kmod -v $newver

-) automatically at startup; systemctl enable dkms.service
   WARNING: Building during startup is too late when using a zfs pool
            for your root/usr drive!
EOF
}

# arg 1:  the old package version
pre_remove() {
  local oldver=${1%%-*}
  # Remove modules using dkms
  [ -n "$oldver" ] && dkms remove -m $_my_kmod -v $oldver --all &>/dev/null || true
}

# arg 1:  the new package version
# arg 2:  the old package version
pre_upgrade() {
  local curver=${2%%-*}
  # $2 might be unset due to a bug. See, https://bugs.archlinux.org/task/32278
  # Query current version using pacman as fallback
  [ -n "$curver" ] || curver=$(pacman -Q $_my_pkgname | cut -d' ' -f2)
  pre_remove "$curver"
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  post_install "$1"
}

